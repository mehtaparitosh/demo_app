= form_for(student) do |f|
  - if student.errors.any?
    #error_explanation
      %h2
        = pluralize(student.errors.count, "error")
        prohibited this student from being saved:
      %ul
        - student.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :st_id
    = f.text_field :st_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :program
    = f.text_field :program
  .field
    = f.label :support
    = f.text_field :support
  .field
    = f.label :school
    = f.text_field :school
  .field
    = f.label :dob
    = f.date_select :dob
  .field
    = f.label :doj
    = f.date_select :doj
  .actions
    = f.submit
